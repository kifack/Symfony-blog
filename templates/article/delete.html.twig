{% extends 'base.html.twig' %}
{% block title %}Delete Article{% endblock %}
{% import 'extra/macro/btn.html.twig' as btn %}

{% block body %}
<div class="container">
    <h1 class="text-danger text-center">Delete article "{{ article.name }}"</h1>
    <h2>Are you sure you want to delete it ?</h2>
    <form method="post" action="{{ path('article_delete', {'id': article.id}) }}">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">

        <div class="btn-group">
         	
         {{  btn.simple(path('article_index') , 'light','Annuler') }}
        <button class="btn btn-danger" type="submit">Delete</button>
        </div>
    </form>
</div>
{% endblock %}